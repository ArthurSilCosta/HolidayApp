<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/edit_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Buscar por sítio, pesquisador ou data"
        android:inputType="text"
        android:padding="12dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_botoes_filtro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_filtro_data"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Filtrar por Data"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_filtro_sitio"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Filtrar por Sítio"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_filtro_pesquisador"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Filtrar por Pesquisador"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerFichas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_botoes_filtro"
        app:layout_constraintBottom_toTopOf="@+id/btn_voltar_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_voltar_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retornar ao Menu"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerFichas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
