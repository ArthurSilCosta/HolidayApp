<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/txt_sitio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <TextView android:id="@+id/txt_localizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_quadra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_profundidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_pesquisador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_cor_solo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_textura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_estruturas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_restos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/txt_observacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_voltar_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar à Lista"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/btn_editar_ficha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Ficha"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:id="@+id/btn_excluir_ficha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excluir Ficha"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude:"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/txt_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude:"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_data_foto_croqui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data da foto:"
            android:paddingTop="8dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/icon_sem_gps"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_gps_off"
            android:contentDescription="Sem localização GPS"
            android:visibility="gone"
            android:layout_marginTop="4dp"
            app:tint="@android:color/darker_gray"/>


    </LinearLayout>
</ScrollView>
